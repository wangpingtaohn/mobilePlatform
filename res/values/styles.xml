<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Animation.Activity" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>
    <style name="MyActivityStyle">
	    <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.Activity</item>
    </style>
    <style name="MyDialogStyle" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    
     <!--custom dialog style-->
    <style name="CustomDialog_Title">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/CustomDialog_Title_TextAppearance</item>
    </style>

    <style name="CustomDialog_Title_TextAppearance">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomDialog_TextAppearance">
        <item name="android:textColor">@color/dialog_msg</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomDialog_Button">
        <item name="android:background">@drawable/btn_dialog_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>
    
</resources>